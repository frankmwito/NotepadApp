<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/notepad"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/notepad_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Note"
        tools:targetApi="31">
        <receiver
            android:name=".NotificationReceiver"
            android:enabled="true"
            android:exported="false"
            android:priority="100"> <!-- Set a higher priority -->
        </receiver>
        <activity
            android:name=".NotesViewModel"
            android:exported="false"
            android:label="@string/title_activity_notes_view_model"
            android:theme="@style/Theme.Note" />
        <activity
            android:name=".Noteadd"
            android:exported="false"
            android:label="@string/title_activity_notesadd"
            android:theme="@style/Theme.Note" />
        <activity
            android:name=".AppNavigation"
            android:exported="false"
            android:label="@string/title_activity_app_navigation"
            android:theme="@style/Theme.Note" />
        <activity
            android:name=".Shedular"
            android:exported="false"
            android:label="@string/title_activity_shedular"
            android:theme="@style/Theme.Note" />
        <activity
            android:name=".TodoList"
            android:exported="false"
            android:label="@string/title_activity_todolist"
            android:theme="@style/Theme.Note" />
        <activity
            android:name=".HomeScreen"
            android:exported="false"
            android:label="@string/title_activity_home_screen"
            android:theme="@style/Theme.Note" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Note">
            <meta-data
                android:name="com.google.android.material.material3.split_screen_primary_surface"
                android:resource="@color/white" />
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service
            android:name=".NotificationWorker"
            android:permission="android.permission.BIND_JOB_SERVICE" />
    </application>

</manifest>